[wsl2]
# Increased memory to handle large data processing
memory=20GB
# More processors for parallel processing
processors=6
# Increased swap for memory overflow
swap=16GB
localhostForwarding=true

# Prevent OOM killer from terminating processes and enable memory management
kernelCommandLine=systemd.unified_cgroup_hierarchy=1 cgroup_enable=memory swapaccount=1

[experimental]
# Gradual memory reclaim helps prevent sudden termination
autoMemoryReclaim=gradual
# Sparse VHD for efficient disk usage
sparseVhd=true
# Disable page reporting to reduce overhead
pageReporting=false